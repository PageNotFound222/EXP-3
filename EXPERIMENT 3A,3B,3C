//EXPERIMENT 3A-CHECKING A NUMBER IS POSITIVE OR NOT

#include <iostream>
using namespace std;

int main() {
    int number;
    cout << "Enter a number: ";
    cin >> number;

    if (number > 0) {
        cout << "The number is positive." << endl;
    } else if (number < 0) {
        cout << "The number is negative." << endl;
    } else {
        cout << "The number is zero." << endl;
    }

    return 0;

//EXPERIMENT 3C-DETERMINING THE CO-ORDINATE AXES SYSTEM 

#include <iostream>
using namespace std;

int main() {
    float x, y;

   
    cout << "Enter the value of x: ";
    cin >> x;

    cout << "Enter the value of y: ";
    cin >> y;

   
    if (x > 0 && y > 0) {
        cout << "The point lies in Quadrant 1";
    } else if (x < 0 && y > 0) {
        cout << "The point lies in Quadrant 2";
    } else if (x < 0 && y < 0) {
        cout << "The point lies in Quadrant 3";
    } else if (x > 0 && y < 0) {
        cout << "The point lies in Quadrant 4";
    } else if (x == 0 && y != 0) {
        cout << "The point lies on the Y-axis";
    } else if (x != 0 && y == 0) {
        cout << "The point lies on the X-axis";
    } else {
        cout << "The point is at the Origin";
    }

    return 0;
}



